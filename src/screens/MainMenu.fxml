<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="750" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainMenuController">
    <children>
      <ImageView fitHeight="750.0" fitWidth="1000.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/mainMenuBg.png" />
         </image>
      </ImageView>
      <Pane prefHeight="750.0" prefWidth="1000.0" />
      <BorderPane prefHeight="750.0" prefWidth="1000.0">
         <left>
            <VBox alignment="CENTER" prefHeight="750.0" prefWidth="250.0" spacing="20.0">
               <children>
                  <Button fx:id="newGameButton" alignment="CENTER" mnemonicParsing="false" onAction="#newGame" prefHeight="53.0" prefWidth="129.0" text="NEW GAME">
                     <font>
                        <Font name="Book Antiqua Bold Italic" size="14.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#openSettings" prefHeight="53.0" prefWidth="129.0" text="SETTINGS">
                     <font>
                        <Font name="Book Antiqua Bold Italic" size="15.0" />
                     </font>
                  </Button>
                  <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitGame" prefHeight="53.0" prefWidth="129.0" text="EXIT GAME">
                     <font>
                        <Font name="Book Antiqua Bold Italic" size="15.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </left>
      </BorderPane>
    </children>
</AnchorPane>
